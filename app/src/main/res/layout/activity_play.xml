<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/saigon2"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.louisphan.idgame1.PlayActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Travel Game"
        android:id="@+id/questionTitle"
        android:textColor="#f5fff1"
        android:textIsSelectable="false"
        android:textStyle="normal|italic"
        android:textSize="18dp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="210dp"
        android:id="@+id/questionImage"
        android:layout_below="@+id/questionTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Travel Game"
        android:layout_below="@+id/questionImage"
        android:id="@+id/questionName"
        android:textColor="#f5fff1"
        android:textIsSelectable="false"
        android:textStyle="normal|italic"
        android:textSize="18dp" />
    <RadioGroup
        android:id="@+id/groupTracNghiem"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/questionName"
        android:orientation="vertical">

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New RadioButton"
        android:id="@+id/answer1"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/answer1"
        android:text="New RadioButton"
        android:id="@+id/answer2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"/>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New RadioButton"
        android:layout_below="@+id/answer2"
        android:id="@+id/answer3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"/>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New RadioButton"
        android:layout_below="@+id/answer3"
        android:id="@+id/answer4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"/>

    </RadioGroup>

    <Button
        android:id="@+id/btnNext"
        android:layout_below="@+id/groupTracNghiem"
        android:text="Next"
        android:textColor="#FFFDFA"
        android:textSize="20sp"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="@drawable/buttonshape"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Travel Game"
        android:layout_below="@+id/groupTracNghiem"
        android:layout_marginTop="35dp"
        android:id="@+id/textPoint"
        android:textColor="#FF0000"
        android:textIsSelectable="false"
        android:textStyle="normal|italic"
        android:textSize="25dp" />

</RelativeLayout>
